{
  "name": "partybillcalculator",
  "version": "1.0.0",
  "type": "module",
  "description": "PartyBillCalculator（PBC 記賬）是一個由於 DAE 課程而製作的在線網頁，能幫不同的用戶，實現多設備網頁端記賬的功能。主要用於聚會、聚餐之後的計算賬單的計算，讓不同的人可以依照規則計算自己的消費。",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "\"C:\\Program Files\\nodejs\\node.exe\" --loader ts-node/esm server/server.ts",
    "dev:watch": "nodemon --watch 'server/**/*' --exec \"\\\"C:\\\\Program Files\\\\nodejs\\\\node.exe\\\" --loader ts-node/esm\" server/server.ts",
    "build": "tsc",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "lint": "eslint \"**/*.{ts,js}\"",
    "type-check": "tsc --noEmit",
    "install-concurrently": "npm install concurrently nodemon --no-save",
    "db:ui": "erd-ui erd.txt",
    "db:setup": "npm run db:migrate",
    "db:dev": "run-s db:migrate db:plan db:update",
    "db:migrate": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" knex migrate:latest",
    "db:plan": "auto-migrate dev.sqlite3 < erd.txt",
    "db:rename": "auto-migrate --rename dev.sqlite3 < erd.txt",
    "db:update": "run-s db:migrate db:gen-proxy",
    "db:gen-proxy": "erd-to-proxy < erd.txt > server\\proxy.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LucaXJX/PartyBillCalculator.git"
  },
  "keywords": [
    "bill-calculator",
    "expense-splitting",
    "party-bill",
    "group-expenses",
    "typescript",
    "express",
    "nodejs"
  ],
  "author": "LucaXJX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LucaXJX/PartyBillCalculator/issues"
  },
  "homepage": "https://github.com/LucaXJX/PartyBillCalculator#readme",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.9.1",
    "better-sqlite3-proxy": "^2.10.1",
    "better-sqlite3-schema": "^3.1.7",
    "dotenv": "^16.0.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "formidable": "^3.5.4",
    "html2canvas": "^1.4.1",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "populate-env": "^2.3.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/formidable": "^3.4.6",
    "@types/integer": "^4.0.3",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "livereload": "^0.9.3",
    "nodemon": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "quick-erd": "^4.29.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
